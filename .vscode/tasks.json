{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Minsk.Compiler/Minsk.Compiler.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "mkc",
            "command": "dotnet",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}/samples"
            },
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/Minsk.Compiler/Minsk.Compiler.csproj",
                "--",
                "${fileDirname}"
            ],
            "presentation": {
                "focus": true,
                "clear": true
            },
            "problemMatcher": {
                "owner": "minsk",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^(.+)\\((\\d+,\\d+,\\d+,\\d+)\\):\\s+(.+)$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ]
            }
        },
        {
            "label": "mki",
            "command": "dotnet",
            "type": "process",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/samples"
            },
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/Minsk.Interactive"
            ],
            "presentation": {
                "focus": true,
                "clear": true
            }
        }
    ]
}